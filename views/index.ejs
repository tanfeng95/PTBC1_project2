<%- include('header', {title: `list of books`}); -%>

  <body>
    <div class="container">
      <%- include('navBar',{username : `${username}`}); -%>
        <div class="search-bar">
          <form class="form-inline" method="GET" action="/">
            <input class='form-control' name="q" aria-label="Search" type="search" />
            <button class=" btn btn-outline-primary  my-2 my-sm-0" type="submit"
              style="background-color: #e3f2fd;">Search</button>
          </form>
        </div>
        <div class="row over d-flex justify-content-center">
          <% for(var i=0; i<result.length; i++) {%>
            <div class="card m-2" style="width: 13rem;">
              <img class="card-img-top image_size" src="<%= result[i].photo %> " alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">
                  <%=result[i].book_title%>
                </h5>
                <p class="card-text"> Author : <%=result[i].author%>
                </p>
                <p class="card-text">
                  <%=result[i].chapters%> chapters
                </p>
              </div>
              <div class="card-footer text-center">
                <a href="book/<%=result[i].id%>" class="btn btn-primary view-btn fa fa-eye">View</a>
              </div>
            </div>
            <% } %>
        </div>
        <%- include('footer'); -%>